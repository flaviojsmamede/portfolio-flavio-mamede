<div id="project-main-div">
  <div class="text-center">
    <h1 class="m-0 mb-3"><%= @project.title.upcase %></h1>
    <div>
      <% @project.roles.each do |role| %>
        <span class="ms-3"><%= role.upcase %></span>
      <% end %>
    </div>
    <div>
      <% @project.technologies.each do |tech| %>
        <span class="opacity-75 ms-3"><%= tech.upcase %></span>
      <% end %>
    </div>
    <br>
    <p class="mt-0"><%= @project.description %></p>
    <%= link_to 'OPEN PROJECT', @project.url, target: '_blank', class: 'btn btn-outline-light border border-light mt-5' %>
  </div>
</div>

<div id="project-images-div">
  <div class="text-center">
    <div class="">
      <% @project.images.drop(1).each do |image| %>
        <img src=<%= image %> class="w-75 mb-5">
      <% end %>
    </div>
    <%= link_to 'MORE PROJECTS', root_path(anchor: "projects-div"), class: 'btn btn-outline-light border border-light' %>
  </div>
</div>
